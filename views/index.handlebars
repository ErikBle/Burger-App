<div class="row center-align">
    <h1>Order your burger here</h1>
</div>

<div class="row center-align">
    <form class="col s12 orderBurger-form">
        <div class="row">
            <div class="input-field col s6">
                <input id="burger" type="text"></input>
                <label for="burger">Burger Name</label>
            </div>
            <button class="waves-effect waves-orange btn orange darken-4" type="submit" name="action" id="submitBtn">
                Submit</button>
        </div>
    </form>
</div>

<div class="row center-align">
    <div class="col s12 m6">
        <div class="row center-align">
            <h4>Ordered Burgers</h4>
        </div>
        <div class="row">
            <ol id="orderlist">
                {{#each burgers}}
                {{#unless devoured}}
                <li>
                    {{burger_name}}

                    <button class="devourBtn"
                        data-burgerid="{{id}}">
                        Eat it
                    </button>
                </li>
                {{/unless}}
                {{/each}}
            </ol>
        </div>

    </div>

    <div class="col s12 m6">
        <div class="row center-align">
            <h4>Burgers in your stomach</h4>
            <a class="waves-effect waves-red btn red accent-4" id="clear">clear
                all</a>
        </div>
        <div class="row">
            <ol id="devouredlist">
                {{#each burgers}}
                {{#if devoured}}
                <li>
                    {{burger_name}}
                </li>
                {{/if}}
                {{/each}}
            </ol>
        </div>
    </div>
</div>