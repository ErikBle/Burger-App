<div class="row center-align">
    <h1>Order your burger here</h1>
</div>

<div class="row center-align">
    <form class="col s12 orderBurger">
        <div class="row">
            <div class="input-field col s5">
                <input id="burger" type="text"></input>
                <label for="burger">Enter burger name</label>
            </div>
            <button class="btn-floating btn-large waves-effect waves-light red" type="submit" name="action" id="submitBtn">
                Add</button>
        </div>
    </form>
</div>

<div class="row center-align">
    <div class="col s12 m6">
        <div class="row center-align">
            <h4>Ordered Burgers
                 <i class="material-icons">mood</i>
            </h4>
        </div>
        <div class="row">
            <ol id="orderlist">
                {{#each burgers}}
                {{#unless devoured}}
                <li>
                    {{burger_name}}

                    <button class="devourBtn"
                        data-burgerid="{{id}}">
                        Chew chew chew
                    </button>
                </li>
                {{/unless}}
                {{/each}}
            </ol>
        </div>

    </div>

    <div class="col s12 m6">
        <div class="row center-align">
            <h4>Burgers in your stomach
             <i class="material-icons">sentiment_neutral</i>
            </h4>
        </div>
        <div class="row">
            <ol id="devouredlist">
                {{#each burgers}}
                {{#if devoured}}
                <li>
                    {{burger_name}}
                </li>
                {{/if}}
                {{/each}}
            </ol>
        </div>
        <a class="waves-effect waves-light btn-large" id="clear">Clear your stomach</a>
    </div>
</div>